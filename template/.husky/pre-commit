# Define variables
STASH_MESSAGE="tmp husky stash"
FILES_TO_STASH=$(git ls-files . --exclude-standard --others -m)

# Function to pop the stash if it was created
cleanup() {
    if [ -n "$FILES_TO_STASH" ]; then
        echo "Restoring stashed files..."
        git stash pop || echo "Failed to pop stash. You may need to manually restore it."
    fi
}

# Check if there are files to stash
if [ -n "$FILES_TO_STASH" ]; then
    git stash push -m "$STASH_MESSAGE" -- $FILES_TO_STASH
fi

